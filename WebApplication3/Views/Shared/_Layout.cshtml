<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title color:#ffffff>@ViewData["Title"] MultiCinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
    <style>
        navbar-brand {
            color: #ffffff;
        }

        nav  {
            background-color: #101084;
            color: #101084;
        }

        body {
            background-color: #000000;
        }

        .navbar {
            background-color: #101084;
        }

            .navbar .nav-link {
                color: #FFFFFF;
            }

                .navbar .nav-link:hover {
                    color: #FFD700;
                }

            .navbar-brand:hover {
                color: #FFD700;
            }

        .footer {
            background-color: #101084;
            color: #101084;
        }

        a {
            color: #FFFFFF;
        }

            a:hover {
                color: #FFD700;
            }

        .container {
            color: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
        }

        .container-fluid {
            color: #FFFFFF;
        }

        .nav-item {
            color: #FFFFFF;
        }
        
        .navbar-nav flex-grow-1 {
            color: #FFFFFF;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index">MultiCinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Repertuar" asp-action="Index">Repertuar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">Historia Rezerwacji</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MultiCinema - <a href="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
