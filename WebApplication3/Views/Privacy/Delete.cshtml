@model WebApplication3.Models.Rezerwacje

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie</h1>

<h3>Jesteś pewny/a, że chcesz usunąć?</h3>
<div>
    <h4>Sesja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Data rozpoczęcia")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data zakończenia")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
